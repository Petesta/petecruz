<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<% if signed_in? %>
  <%= link_to "Create new post", new_post_path %>
<% end %>

<div class="posts-container">
  <% @posts.each do |post| %>
    <div class="post">
        <h2><%= post.title %></h2>
        <%= post.body %>
    </div>
  <% end %>
</div>
