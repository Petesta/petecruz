<% if signed_in? %>
  <%= link_to "Create new post", new_post_path %>
<% end %>

<div class="span-11 posts-container">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-title">
        <h2><%= post.title %></h2>
      </div>
      <div class="post-content">
        <%= post.body %>
      </div>
    </div>
  <% end %>
</div>
