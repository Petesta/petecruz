<div class="container">
  <div class="row">
    <%= render 'posts/sidebar' %>

    <div class="span-10 offset-1 posts-container">
      <% @posts.each do |post| %>
        <div class="post">
          <div class="post-title">
            <h2><%= post.title %></h2>
          </div>

          <p class="post-date"><%= render_time(post.created_at) %></p>

          <div class="post-body">
            <%= post.body %>
          </div>

          <hr>
        </div> <!--post-->
      <% end %>

      <%= will_paginate @posts, :outer_window => 1 %>

      <% if signed_in? %>
        <%= link_to "Create new post", new_post_path, {class: "btn btn-blue", id: "new-post"} %>
      <% end %>
    </div>
  </div> <!--row-->
</div> <!--container-->
