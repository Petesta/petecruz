<%= form_for(@user, :html => { :style => 'background: none;', :style => 'border: none;' }) do |f| %>
  <%= f.label :full_name, "Full Name" %>
  <%= f.text_field :full_name, autofocus: true  %>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <div id="hint"></div>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :permissions %>
  <%= f.select(:permissions, options_for_select([
    ['Administrator', 0],
    ['Developer', 1],
    ['Author', 2]
  ], 0))
  %>

  <%= submit_tag "Sign Up", class: "btn btn-large btn-blue btn-mobile-block" %>
<% end %>
